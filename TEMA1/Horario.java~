/**
* Horario de clases "Traducción"
*
* @Alejandro Ramos Román
*/
public class Horario { // Horario
	public static void main(String[] args) {
	  String rojo = "\033[31m";
	  String verde = "\033[32m";
	  String naranja = "\033[33m";
	  String azul = "\033[34m";
	  String morado = "\033[35m";
	  String blanco = "\033[37m";
	  System.out.print(rojo +"LUNES\t\t\t"+ azul +"MARTES\t\t\t");
	  System.out.println( verde +"MIERCOLES\t\t"+blanco +"JUEVES\t\t"+morado +"VIERNES");
	  System.out.println("FOL\t\t\tPROG\t\t\tSIN\t\t\tPROG\t\tBBDD");
	  System.out.println("FOL\t\t\tPROG\t\t\tSIN\t\t\tPROG\t\tBBDD");
	  System.out.println("FOL\t\t\tPROG\t\t\tSIN\t\t\tPROG\t\tBBDD");
	  System.out.println("PROG\t\t\tPROG\t\t\tSIN\t\t\tED\t\tPROG");
	  System.out.println("ED\t\t\tBBDD\t\t\tLM\t\t\tLM\t\tSIN");
	  System.out.println("ED\t\t\tBBDD\t\t\tLM\t\t\tLM\t\tSIN");
	}
}
